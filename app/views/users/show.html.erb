          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%# Booked Bookings of my life %>
  <div class="container-profile">
    <h2>Bookings of my life</h2>
    <br>
    <% if @lives.empty? %>
      <p>No bookings so far</p>
    <% else %>
      <% @lives.each do |life| %>
        <% life.bookings.each do |booking| %>
          <% if booking.confirmed == 'confirmed' %>
            <div class="card-product">
              <%= cl_image_tag life.photo.key, crop: :fill %>
              <div class="card-product-infos">
                <h2><%= life.user.first_name %> <%= life.user.last_name %></h2>
                <p><strong>Job:</strong> <%= life.job.capitalize %></p>
                <p><strong>Family:</strong> <%= life.family.capitalize %></p>
                <p><strong>City:</strong> <%= life.city.capitalize %></p>
                <p><strong>Price Per Day: </strong><%= life.price_per_day %>‚Ç¨</p>
              </div>
              <%# TODO not functional %>
              <div>
                <%= link_to "Cancel", reject_path(booking), class: "btn btn-normal", method: :patch, data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
