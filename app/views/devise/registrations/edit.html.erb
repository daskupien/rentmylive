<div class="container-general">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="form-inputs">


    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :host_bio,
                required: false %>
    <%= f.input :address,
                required: false,
                input_html: { autocomplete: "address" } %>

      <div class="form-group">
      <div class="row">
      <% if current_user.photo.attached? %>
        <div class="col-sm-4">
          <%= f.label "Current Avatar" %>
            <br>
          <%= cl_image_tag current_user.photo.key, class: "avatar" %>
        </div>
      <% else %>
        <div class="col-sm-2 text-center">
          <%= f.label "Current Avatar" %>
          <%= cl_image_tag("https://res.cloudinary.com/rentmylife/image/upload/v1614335184/kisspng-computer-icons-person-avatar-download-person-icon-5b480703d1f604.21741917153144704386_foan5y.png", size: "40x40")%>
        </div>
      <% end %>

        <div class="col-sm-8">
          <%= f.label "Change Avatar" %>
            <br>
          <%= f.file_field :photo, direct_upload: true %>
        </div>
      </div>
    </div>
   

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

</div>


